<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="2dp">


    <!--android:onClick="onClick"-->

    <!--android:onClick="onClickStop"/>-->

    <TextView
        android:text="00000"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="22sp"
        android:gravity="left"
        android:id="@+id/textView_monitor_1"
        android:layout_alignBottom="@+id/spinner_monitor_1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/spinner_monitor_1"
        android:layout_toEndOf="@+id/spinner_monitor_1" />

    <TextView
        android:text="00000"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="22sp"
        android:gravity="left"
        android:id="@+id/textView_monitor_2"
        android:layout_alignBottom="@+id/spinner_monitor_2"
        android:layout_toRightOf="@+id/spinner_monitor_2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="00000"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="22sp"
        android:gravity="left"
        android:id="@+id/textView_monitor_3"
        android:layout_alignTop="@+id/spinner_monitor_3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/spinner_monitor_3"
        android:layout_toEndOf="@+id/spinner_monitor_3" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/spinner_monitor_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/stop_btn"
        android:layout_alignEnd="@+id/stop_btn"
        android:background="@color/beige"
        android:popupBackground="@color/lightsteelblue"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/spinner_monitor_3"
        android:layout_below="@+id/spinner_monitor_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/stop_btn"
        android:layout_alignEnd="@+id/stop_btn"
        android:background="@color/beige"
        android:popupBackground="@color/lightsteelblue"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/spinner_monitor_4"
        android:layout_below="@+id/spinner_monitor_3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView_monitor_3"
        android:layout_toStartOf="@+id/textView_monitor_3"
        android:background="@color/lavenderblush"
        android:popupBackground="@color/lightsteelblue"/>

    <TextView
        android:text="00000"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/textView_monitor_4"
        android:textSize="22sp"
        android:gravity="left"
        android:layout_below="@+id/textView_monitor_3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/spinner_monitor_3"
        android:layout_toEndOf="@+id/spinner_monitor_3" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/spinner_monitor_2"
        android:layout_below="@+id/textView_monitor_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView_monitor_1"
        android:layout_toStartOf="@+id/textView_monitor_1"
        android:background="@color/lavenderblush"
        android:popupBackground="@color/lightsteelblue" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/spinner_monitor_5"
        android:layout_below="@+id/spinner_monitor_4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView_monitor_4"
        android:layout_toStartOf="@+id/textView_monitor_4"
        android:background="@color/beige"
        android:popupBackground="@color/lightsteelblue"/>

    <Button
        android:text="刷新"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:id="@+id/refreshbutton"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/spinner_monitor_5" />

    <TextView
        android:text="00000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_monitor_5"
        android:textSize="22sp"
        android:gravity="left"
        android:layout_below="@+id/textView_monitor_4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/spinner_monitor_5"
        android:layout_toRightOf="@+id/spinner_monitor_4"
        android:layout_toEndOf="@+id/spinner_monitor_4" />

    <Button
        android:text="自由停机"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_below="@+id/refreshbutton"
        android:layout_toLeftOf="@+id/refreshbutton"
        android:layout_toStartOf="@+id/refreshbutton" />

    <Button
        android:text="正转运行"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:text="反转运行"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_btn"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Button
        android:text="故障复位"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_below="@+id/refreshbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="减速停机"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stop_btn"
        android:layout_below="@+id/button2"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:layout_marginRight="75dp"
        android:layout_marginEnd="75dp" />

</RelativeLayout>
